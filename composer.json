{
    "name": "mtymek/blast-base-url",
    "description": "PSR-7 middleware and helpers for working with base URL.",
    "keywords": ["psr7", "psr-7", "middleware", "base url", "baseurl", "expressive"],
    "authors": [
        {
            "name": "Mateusz Tymek",
            "email": "mtymek@gmail.com"
        }
    ],
    "license": "BSD-2-Clause",
    "type": "library",
    "require": {
        "php": "^5.5 || ^7.0",
        "psr/http-message": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.6",
        "squizlabs/php_codesniffer": "^2.3",
        "zendframework/zend-servicemanager": "^2.6",
        "zendframework/zend-expressive-helpers": "^1.4 || ^2.0",
        "zendframework/zend-diactoros": "^1.3",
        "zendframework/zend-expressive-zendviewrenderer": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Blast\\BaseUrl\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Blast\\Test\\BaseUrl\\": "test"
        }
    },
    "scripts": {
        "check": [
            "@cs",
            "@test"
        ],
        "cs": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit"
    }
}
